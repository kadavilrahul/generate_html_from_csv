# MySQL Database Configuration (for woocommerce orders and products)
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=3306
# WordPress/WooCommerce table prefix (check your wp-config.php)
# Common examples: wp_, kdf_, custom_, site123_
DB_TABLE_PREFIX=your_database_table_prefix_
WC_URL=https://your-domain.com

# LLM API Configuration
GEMINI_API_KEY=your_gemini_api_key
# Available models: gemini-2.0-flash, gemini-1.5-pro, gemini-1.5-flash
GEMINI_MODEL=gemini-2.0-flash

# PostgreSQL Database Configuration (for additional products - optional)
PG_DB_NAME=your_postgres_db_name
PG_DB_USER=your_postgres_user
PG_DB_PASSWORD=your_postgres_password
PG_DB_HOST=localhost
PG_DB_PORT=5432

# Configuration Examples:
# 
# Standard WordPress installation:
# DB_TABLE_PREFIX=wp_
# 
# Custom prefix installation:
# DB_TABLE_PREFIX=kdf_
# DB_TABLE_PREFIX=mysite_
# DB_TABLE_PREFIX=shop123_
#
# To find your table prefix:
# 1. Check wp-config.php: $table_prefix = 'your_prefix_';
# 2. Or check database tables: SHOW TABLES LIKE '%posts';
# 3. Use the prefix before 'posts' (e.g., wp_posts -> wp_)